// This uses jQuery to update the follower with AJAX.  render changes the button
<% if current_user.watched_episode?(@episode) %>
  $("#episode_form_<%= @episode.id %>").html("<%= escape_javascript(render('tv_shows/watched_episode')) %>")
<% else %>
  $("#episode_form_<%= @episode.id %>").html("<%= escape_javascript(render('tv_shows/unwatched_episode')) %>")
<% end %>  